{
    "manifest_version": 3,
    "name": "YouTube Clip Marker",
    "version": "1.0",
    "description": "Mark and send video segments with transcripts.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  